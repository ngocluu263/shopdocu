<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d2cfcf"
    tools:context="com.swd2015.shopdocu.Minh.Test"
   >


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgCheck"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_check_circle_white_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Làm ăn uy tín"
        android:id="@+id/textView6"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgExchange"
        android:src="@drawable/ic_cached_white_24dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgCash"
        android:layout_marginRight="28dp"
        android:src="@drawable/ic_attach_money_white_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cho đổi trả hàng"
        android:id="@+id/textView7"
        android:layout_below="@+id/imgExchange"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trả tiền khi nhận"
        android:id="@+id/textView8"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hàng"
        android:id="@+id/textView9"
        android:layout_marginRight="7dp"
        android:layout_below="@+id/textView8"
        android:layout_alignRight="@+id/imgCash"
        android:layout_alignEnd="@+id/imgCash" />
</RelativeLayout>
