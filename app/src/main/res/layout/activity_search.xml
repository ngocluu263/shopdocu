<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout_grid_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.swd2015.shopdocu.Ga.SearchActivity">

    <EditText
        android:id="@+id/input_key_search_bar"
        android:hint="@string/search_hint"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="#EEEEEE"
        android:layout_marginTop="94dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/button_search_view"
        android:src="@drawable/ic_search_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/input_key_search_bar"
        android:layout_alignRight="@+id/input_key_search_bar"
        android:layout_alignEnd="@+id/input_key_search_bar"
        android:layout_alignTop="@+id/input_key_search_bar" />

    <TextView
        android:id="@+id/category_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh mục:"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/input_key_search_bar"
        android:layout_alignLeft="@+id/input_key_search_bar"
        android:layout_alignStart="@+id/input_key_search_bar" />

    <Spinner
        android:id="@+id/category_spinner"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/category_text_view"
        android:layout_alignRight="@+id/input_key_search_bar"
        android:layout_alignEnd="@+id/input_key_search_bar"
        android:layout_alignBottom="@+id/category_text_view"
        android:background="#45BF55" />

    <TextView
        android:id="@+id/orderBy_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sắp xếp theo:"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/category_text_view"
        android:layout_alignLeft="@+id/category_text_view"
        android:layout_alignStart="@+id/category_text_view" />


    <Spinner
        android:id="@+id/orderBy_spinner"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/orderBy_text_view"
        android:layout_alignEnd="@+id/category_spinner"
        android:layout_alignBottom="@+id/orderBy_text_view"
        android:layout_alignRight="@+id/input_key_search_bar"
        android:background="#45BF55" />

    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/search_result_gridview"
        android:layout_width="match_parent"
        android:layout_height="2000dp"
        android:columnWidth="90dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_below="@+id/orderBy_text_view"
        android:layout_marginTop="30dp"
        android:visibility="invisible"
        android:layout_alignLeft="@+id/orderBy_text_view"
        android:layout_alignStart="@+id/orderBy_text_view"
        android:layout_alignRight="@+id/orderBy_spinner"
        android:layout_alignEnd="@+id/orderBy_spinner" />

</RelativeLayout>
