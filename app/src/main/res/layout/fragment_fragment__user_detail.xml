<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="2dp"
    android:background="@color/colorUserDetail"
    tools:context="com.swd2015.shopdocu.Khiem.fragment_UserDetail">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#FFFFFC"
        android:layout_marginTop="0.5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/frameLayout_base">

        <ImageButton
            android:layout_width="10dp"
            android:layout_height="18dp"
            android:src="@drawable/user_detail_back"
            android:id="@+id/bt_Back"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="13dp"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView_avatar"
            android:src="@drawable/useravatar"

            android:layout_marginLeft="42dp"
            android:layout_marginTop="6dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Fullname"
            android:id="@+id/FullName"
            android:layout_marginLeft="96dp"
            android:layout_marginTop="18dp"/>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frameLayout_base"
        android:layout_marginTop="0.8dp"
        android:layout_alignLeft="@+id/frameLayout_base"
        android:layout_alignStart="@+id/frameLayout_base"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFC">

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Name"-->
                <!--android:textSize="15dp"-->
                <!--android:id="@+id/Name"-->
                <!--android:layout_marginLeft="13dp"-->
                <!--android:layout_marginTop="9dp"-->
                <!--/>-->

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/Image_Name"
                android:src="@drawable/ic_add_customer_name"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="18dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText_Name"
                android:inputType="text"
                android:hint="Your Name"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="53dp"
                />

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="20dp"-->
                <!--android:text="Email"-->
                <!--android:textSize="15dp"-->
                <!--android:id="@+id/Email"-->
                <!--android:layout_marginLeft="13dp"-->
                <!--android:layout_marginTop="68dp" />-->

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/Image_Email"
                android:src="@drawable/ic_add_customer_email"
                android:layout_marginTop="76dp"
                android:layout_marginLeft="18dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText_Email"
                android:inputType="text"
                android:hint="Email: example@example.exp"
                android:layout_marginTop="68dp"
                android:layout_marginLeft="53dp" />
            <!--android:background="@drawable/shadow_box"-->

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Điện thoại"-->
                <!--android:textSize="15dp"-->
                <!--android:id="@+id/Phone"-->
                <!--android:layout_marginLeft="13dp"-->
                <!--android:layout_marginTop="125dp" />-->

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/Image_Phone"
                android:src="@drawable/ic_add_customer_phone"
                android:layout_marginTop="131dp"
                android:layout_marginLeft="17.5dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText_Phone"
                android:inputType="phone"
                android:hint="Phone"
                android:layout_marginTop="125dp"
                android:layout_marginLeft="53dp"/>
            <!--android:background="@drawable/shadow_box"-->

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Ngày sinh"-->
                <!--android:textSize="15dp"-->
                <!--android:id="@+id/DOB"-->
                <!--android:layout_marginLeft="13dp"-->
                <!--android:layout_marginTop="186dp" />-->

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/Image_DOB"
                android:src="@drawable/user_detail_dob"
                android:layout_marginTop="192dp"
                android:layout_marginLeft="18dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText_DOB"
                android:inputType="text"
                android:hint="Birthday"
                android:layout_marginTop="186dp"
                android:layout_marginLeft="53dp"/>
            <!--android:background="@drawable/shadow_box"-->

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Địa chỉ"-->
                <!--android:textSize="15dp"-->
                <!--android:id="@+id/Address"-->
                <!--android:layout_marginLeft="13dp"-->
                <!--android:layout_marginTop="246dp" />-->

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/Image_Address"
                android:src="@drawable/ic_add_customer_address"
                android:layout_marginTop="253dp"
                android:layout_marginLeft="18dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/editText_Address"
                android:hint="Address"
                android:inputType="textMultiLine"
                android:layout_marginTop="240dp"
                android:layout_marginLeft="53dp" />
            <!--android:background="@drawable/shadow_box"-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giới tính"
                android:textSize="15dp"
                android:id="@+id/Gender"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="300dp" />

            <RadioGroup
                android:id="@+id/rdGroup_Gender"
                android:layout_marginTop="330dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:id="@+id/rdMale"
                    android:text="Male"
                    android:layout_marginLeft="20dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:id="@+id/rdFemale"
                    android:text="Female"
                    android:layout_marginLeft="41dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:id="@+id/rdOther"
                    android:text="Other"
                    android:layout_marginLeft="45dp" />

            </RadioGroup>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Cập Nhật"
                android:textAllCaps="false"
                android:id="@+id/bt_Update"
                android:layout_marginTop="380dp"
                android:layout_marginLeft="0dp"
                android:background="@color/colorUpdateButton"
                android:textColor="@color/colorUpdateLetter"
                android:layout_gravity="bottom|center"
                android:textSize="20dp"
                />

        </FrameLayout>

    </ScrollView>

</RelativeLayout>
