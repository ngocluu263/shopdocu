<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.swd2015.shopdocu.Controller.Activity.RequestSellCustomerFragment">

    <ImageView
        android:id="@+id/add_customer_name_icon"
        android:src="@drawable/ic_add_customer_name"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/inputCustomerName"
        android:layout_toLeftOf="@+id/inputProductCategory"
        android:layout_toStartOf="@+id/inputProductCategory" />

    <EditText
        android:id="@+id/inputCustomerName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="@string/add_customer_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/add_customer_name_icon"
        android:layout_toEndOf="@+id/add_customer_name_icon"
        android:layout_marginTop="46dp" />

    <ImageView
        android:id="@+id/add_customer_address_icon"
        android:src="@drawable/ic_add_customer_address"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/add_customer_name_icon"
        android:layout_toLeftOf="@+id/inputCustomerEmail"
        android:layout_toStartOf="@+id/inputCustomerEmail" />

    <EditText
        android:id="@+id/inputProductCategory"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="@string/add_customer_address"
        android:layout_alignBottom="@+id/add_customer_address_icon"
        android:layout_toRightOf="@+id/add_customer_address_icon"
        android:layout_toEndOf="@+id/add_customer_address_icon" />

    <ImageView
        android:id="@+id/add_customer_email_icon"
        android:src="@drawable/ic_add_customer_email"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/add_customer_address_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp"/>

    <EditText
        android:id="@+id/inputCustomerEmail"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="@string/add_customer_email"
        android:layout_alignBottom="@+id/add_customer_email_icon"
        android:layout_toRightOf="@+id/add_customer_email_icon"
        android:layout_toEndOf="@+id/add_customer_email_icon" />

    <ImageView
        android:id="@+id/add_customer_phone_icon"
        android:src="@drawable/ic_add_customer_phone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/add_customer_email_icon"
        android:layout_alignRight="@+id/add_customer_email_icon"
        android:layout_alignEnd="@+id/add_customer_email_icon" />

    <EditText
        android:id="@+id/inputCustomerPhone"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="@string/add_customer_phone"
        android:layout_alignTop="@+id/add_customer_phone_icon"
        android:layout_toRightOf="@+id/add_customer_phone_icon"
        android:layout_toEndOf="@+id/add_customer_phone_icon"
        android:inputType="number"/>

    <Button
        android:layout_width="355dp"
        android:layout_height="55dp"
        android:text="@string/request_for_sell_button"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="23sp"
        android:textStyle="bold"
        android:background="@color/colorPrimary"/>
</RelativeLayout>
