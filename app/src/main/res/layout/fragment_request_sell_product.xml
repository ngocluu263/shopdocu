        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_alignRight="@+id/inputProductName"-->
        <!--android:layout_alignEnd="@+id/inputProductName"-->
        <!--android:layout_margin="20dp"-->
        <!--android:background="#000000"/>-->

</RelativeLayout>
