<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.swd2015.shopdocu.Ga.RequestSellProductFragment" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/add_product_photos"
                    android:src="@drawable/region_add_product_photos"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:id="@+id/add_product_name_icon"
                    android:src="@drawable/ic_add_product_name"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="190dp"
                    android:layout_marginLeft="10dp" />

                <EditText
                    android:id="@+id/input_product_name"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:hint="@string/add_product_name"
                    android:layout_marginTop="190dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="20dp"
                    android:inputType="text" />

                <ImageView
                    android:id="@+id/add_product_category_icon"
                    android:src="@drawable/ic_add_product_category"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="255dp"
                    android:layout_marginLeft="10dp" />

                <Spinner
                    android:id="@+id/input_product_category_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:hint="@string/add_product_category"
                    android:layout_marginTop="265dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="20dp"
                    android:inputType="text"
                    android:entries="@array/rs_category_spinner"/>
                <View
                    android:id="@+id/rs_category_spinner_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorAccent"
                    android:layout_below="@+id/input_product_category_spinner"
                    android:layout_alignRight="@+id/input_product_category_spinner"
                    android:layout_marginLeft="60dp"/>

                <ImageView
                    android:id="@+id/add_product_price_icon"
                    android:src="@drawable/ic_add_product_price"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="325dp"
                    android:layout_marginLeft="10dp" />

                <EditText
                    android:id="@+id/input_product_price"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:hint="@string/add_product_price"
                    android:layout_marginTop="325dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="20dp"
                    android:inputType="number"/>

                <TextView
                    android:id="@+id/vnd_textView"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="Ä‘"
                    android:layout_marginTop="325dp"
                    android:layout_alignRight="@+id/input_product_price"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/add_exchange_address_icon"
                    android:src="@drawable/ic_add_exchange_address"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="395dp"
                    android:layout_marginLeft="10dp"/>

                <EditText
                    android:id="@+id/input_place_exchange"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:hint="@string/add_exchange_address"
                    android:layout_marginTop="395dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="20dp"
                    android:inputType="text" />

                <ImageView
                    android:id="@+id/add_product_detail"
                    android:src="@drawable/ic_add_product_detail"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="460dp"
                    android:layout_marginLeft="10dp" />

                <EditText
                    android:id="@+id/input_product_description"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:hint="@string/add_product_description"
                    android:layout_marginTop="460dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="20dp"
                    android:inputType="textMultiLine"/>

                <Button
                    android:id="@+id/request_sell_product_button_continue"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:text="@string/continue_button"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:layout_below="@+id/input_product_description"
                    android:layout_marginTop="25dp"
                    android:background="@color/colorPrimary" />

            </RelativeLayout>
    </ScrollView>
</RelativeLayout>