<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.swd2015.shopdocu.Minh.HomePageActivity">

    <!--Main content -->
    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dcdddf">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/banner"
            android:background="@drawable/banner1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sản phẩm mới"
            android:id="@+id/textView"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_below="@+id/banner"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:id="@+id/horizontalScrollView"
            android:layout_below="@+id/textView"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
           <GridView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:id="@+id/newProductGrid">

           </GridView>

        </HorizontalScrollView>


    </RelativeLayout>

        <!--Drawer Pane -->
        <RelativeLayout
            android:id="@+id/drawer_pane"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="start">

            <!--Profile box -->
            <RelativeLayout
                android:id="@+id/profile_box"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center_vertical"
                android:background="#dcdddf">
                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/blank_icon"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đăng kí/Đăng nhập"
                    android:id="@+id/avartarName"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/avatar"
                    android:layout_toEndOf="@+id/avatar"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="22dp" />
            </RelativeLayout>

            <!--Navigation ListView-->
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/profile_box"
                android:divider="#bcb6b5"
                android:dividerHeight="1dp"
                android:id="@+id/nav_list"
                android:choiceMode="singleChoice"
                android:background="#ffffff">
             
            </ListView>

        </RelativeLayout>


</android.support.v4.widget.DrawerLayout>
