<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.swd2015.shopdocu.Controller.Activity.ProductDetailActivity">


    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dcdddf">


        <TextView
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Tên sản phẩm"
            android:id="@+id/product_name"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="match_parent"
            android:layout_height="50px" />

        <ImageView
            android:layout_below="@id/product_name"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/product_large_image"

            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    <RelativeLayout
        android:id="@+id/product_small_image_list"
        android:layout_below="@id/product_large_image"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:background="#dcdddf" >

        <RelativeLayout
            android:id="@+id/small_image_section_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/product_small_image_1"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/small_image_section_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/small_image_section_1">

            <ImageView
                android:id="@+id/product_small_image_2"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/small_image_section_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/small_image_section_2">

            <ImageView
                android:id="@+id/product_small_image_3"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </RelativeLayout>
    </RelativeLayout>

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>