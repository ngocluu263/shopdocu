            android:label="@string/title_activity_home_page" >
        </activity>

        <uses-feature
            android:name="android.hardware.camera"
            android:required="true" />

        <uses-permission android:name="android.permission.INTERNET"/>

        <activity android:name=".Ga.SearchActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".Controller.Activity.ProductDetailActivity"
            android:uiOptions="splitActionBarWhenNarrow">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!--<activity android:name=".Ga.RequestSellActivity" >-->
            <!--<intent-filter>-->

            <!--</intent-filter>-->
        <!--</activity>-->
        <activity android:name=".Minh.LoginActivity" >
        </activity>

        <activity android:name=".Controller.Activity.CartActivity"
            android:label="@string/cart_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
